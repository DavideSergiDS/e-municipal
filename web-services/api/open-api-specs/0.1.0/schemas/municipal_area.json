{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://e-municipal.com/schemas/municipal_area.json",
    "type": "object",
    "title": "E-municipal topic",
    "description": "E-municipal area model",
    "default": {},
    "required": [
        "name",
        "city",
        "province",
        "region",
        "state",
        "perimeter"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "Municipal area name",
            "description": "Municipal area name"
        },
        "city": {
            "$id": "#/properties/city",
            "type": "string",
            "title": "Belonging city",
            "description": "Belonging city"
        },
        "province": {
            "$id": "#/properties/province",
            "type": "string",
            "title": "Belonging province",
            "description": "Belonging province"
        },
        "region": {
            "$id": "#/properties/region",
            "type": "string",
            "title": "Belonging region",
            "description": "Belonging region"
        },
        "state": {
            "$id": "#/properties/state",
            "type": "string",
            "title": "Belonging state",
            "description": "Belonging state"
        },
        "perimeter": {
            "$id": "#/properties/perimeter",
            "type": "array",
            "title": "Area geo-perimeter",
            "description": "Geo-point array defining area perimeter",
            "items": {
                "$schema": "https://e-municipal.com/schemas/geographical-location.schema.json"
            }
        }
    }
}