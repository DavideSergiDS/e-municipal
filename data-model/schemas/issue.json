{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://e-municipal.com/schemas/topic.json",
    "type": "object",
    "title": "E-municipal topic",
    "description": "E-municipal topic model",
    "default": {},
    "required": [
        "id",
        "title",
        "description",
        "author_ref",
        "municipal_area_ref",
        "topic_refs",
        "state"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "Issue unique identifier",
            "description": "Topic name"
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "Issue title",
            "description": "Issue title"
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "Issue description",
            "description": "Issue description"
        },
        "author_ref": {
            "$id": "#/properties/author_ref",
            "type": "string",
            "title": "Issue author",
            "description": "Issue user author reference"
        },
        "municipal_area_ref": {
            "$id": "#/properties/municipal_area_ref",
            "type": "string",
            "title": "Municipal area related to the issue",
            "description": "Issue municipal area reference"
        },
        "topic_refs": {
            "$id": "#/properties/topic_refs",
            "type": "array",
            "title": "Topics rapresenting the issue",
            "description": "Issue municipal area reference"
        },
        "state": {
            "$id": "#/properties/state",
            "type": "string",
            "enum": [ "created", "submitted", "in_process", "idle", "closed"],
            "title": "Issue state",
            "description": "Current state assumed by the issue"
        }
    }
}